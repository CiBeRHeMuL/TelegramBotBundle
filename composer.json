{
  "name": "andrew-gos/telegram-bot-bundle",
  "description": "Advanced strictly typed Telegram Bot Library",
  "type": "symfony-bundle",
  "license": "MIT",
  "keywords": [
    "telegram",
    "api",
    "andrew-gos",
    "php",
    "bot",
    "telegram-bot",
    "symfony-bundle",
    "symfony",
    "bundle"
  ],
  "homepage": "https://github.com/CiBeRHeMuL/TelegramBotBundle",
  "autoload": {
    "psr-4": {
      "AndrewGos\\TelegramBotBundle\\": "src/"
    }
  },
  "authors": [
    {
      "name": "Andrey Gostev",
      "email": "Gostev71@outlook.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": "^8.2",
    "ext-pcntl": "*",
    "andrew-gos/telegram-bot": "^4.0",
    "symfony/config": "^7.3",
    "symfony/dependency-injection": "^7.3",
    "symfony/http-kernel": "^7.3",
    "symfony/yaml": "^7.3"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^3.87",
    "phpunit/phpunit": "^11.2"
  },
  "config": {
    "sort-packages": true,
    "prefer-stable": true
  },
  "scripts": {
    "php-cs-fix": "php-cs-fixer fix",
    "php-cs-check": "php-cs-fixer check"
  },
  "extra": {
    "symfony": {
      "allow-contrib": "true"
    }
  }
}
